
<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :image %><br>
        <%= form.file_field :image %>
    </div>
    <div>
        <%= form.label :caption %><br>
        <%= form.text_field :caption%>
    </div>
    <div>
        <br>
        <%= form.submit %>
    </div>
<% end %>    
